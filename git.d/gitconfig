[user]
	name = GIT_USER
	email = GIT_EMAIL
[alias]
	tree = log --date=human --date-order --graph --all --pretty=format:'%C(auto)%h -%C(auto)%d %C(blue)(%cr)%Creset - %C(dim white)%an%n''          %C(auto)%s'
	d = difftool
[pull]
	rebase = true
[rebase]
	autoStash = true
[log]
	decorate = short
	date = iso
[core]
	editor = vim
	excludesfile = ~/.gitignore
[diff]
	tool = vimdiff
[merge]
	tool = vimdiff
	conflictstyle = diff3
	guitool = vscode
[mergetool]
	keepBackup = false
[mergetool "vscode"]
	cmd = code --wait $MERGED
[difftool]
	prompt = false
[credential]
	helper = store
